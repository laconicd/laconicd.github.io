{
  "tasks": {
    "tailwindcss:build": "tailwindcss -i assets/tailwind.css -o static/styles.css",
    "router:build": "deno bundle --platform browser --minify --sourcemap=linked --outdir static/ scripts/router.ts",
    "dev": {
      "command": "zola serve --port 8080",
      "dependencies": [
        "tailwindcss:build",
        "router:build"
      ]
    },
    "prd": {
      "command": "zola build",
      "dependencies": [
        "tailwindcss:build",
        "router:build"
      ]
    }
  },
  "imports": {
    "daisyui": "npm:daisyui@^5.5.14",
    "fuse.js": "npm:fuse.js@^7.1.0"
  },
  "compilerOptions": {
    "lib": [
      "deno.window",
      "deno.ns",
      "deno.unstable",
      "deno.worker",
      "esnext",
      "dom",
      "dom.asynciterable",
      "dom.iterable"
    ]
  },
  "nodeModulesDir": "auto"
}
