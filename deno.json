{
  "tasks": {
    "tailwindcss:build": "deno run -A @tailwindcss/cli -i styles/tailwind.css -o static/styles.css",
    "main:build": "deno bundle --platform browser --minify --sourcemap=linked --outdir static/ scripts/main.ts",
    "copy:fuse": "cp node_modules/fuse.js/dist/fuse.min.mjs static/",
    "copy:font:outfit:files": "cp -r node_modules/@fontsource-variable/outfit/files static/fonts/",
    "zola:serve": "zola serve --port 8080",
    "zola:serve:ext": "zola serve --interface 0.0.0.0 --base-url $(ipconfig getifaddr en0)",
    "zola:build": "zola build",
    "common": {
      "dependencies": [
        "tailwindcss:build",
        "copy:fuse",
        "copy:font:outfit:files"
      ]
    },
    "init": "mkdir -p static/fonts && deno task common",
    "dev": "deno task init && deno task zola:serve",
    "dev:ext": "deno task init && deno task zola:serve:ext",
    "prd": "deno task init && deno task zola:build"
  },
  "compilerOptions": {
    "lib": [
      "deno.window",
      "deno.ns",
      "deno.unstable",
      "deno.worker",
      "esnext",
      "dom",
      "dom.asynciterable",
      "dom.iterable"
    ]
  },
  "nodeModulesDir": "auto",
  "allowScripts": {
    "allow": [],
    "deny": [
      "npm:@parcel/watcher@2.5.1"
    ]
  },
  "imports": {
    "@fontsource-variable/outfit": "npm:@fontsource-variable/outfit@^5.2.8",
    "@tailwindcss/cli": "npm:@tailwindcss/cli@^4.1.18",
    "daisyui": "npm:daisyui@^5.5.14",
    "fuse.js": "npm:fuse.js@^7.1.0",
    "tailwindcss": "npm:tailwindcss@^4.1.18",
    "@tailwindcss/typography": "npm:@tailwindcss/typography@^0.5.19"
  }
}
