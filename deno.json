{
  "tasks": {
    "tailwindcss:build": "deno run -A @tailwindcss/cli -i styles/tailwind.css -o static/styles.css",
    "scripts:build": "deno bundle --platform browser --minify --sourcemap=linked --outdir static/ scripts/main.ts scripts/theme.ts",
    "fonts:fetch": "deno run -A scripts/fetch-fonts.ts",
    "zola:serve": "zola serve --port 8080",
    "zola:build": "zola build",
    "common": {
      "dependencies": [
        "fonts:fetch",
        "tailwindcss:build",
        "scripts:build"
      ]
    },
    "init": "mkdir -p static && deno task common",
    "dev": "deno task init && deno task zola:serve",
    "prd": "deno task init && deno task zola:build"
  },
  "compilerOptions": {
    "lib": [
      "deno.window",
      "deno.ns",
      "deno.unstable",
      "deno.worker",
      "esnext",
      "dom",
      "dom.asynciterable",
      "dom.iterable"
    ]
  },
  "nodeModulesDir": "auto",
  "allowScripts": {
    "allow": [],
    "deny": [
      "npm:@parcel/watcher@2.5.1"
    ]
  },
  "imports": {
    "@fontsource-variable/outfit": "npm:@fontsource-variable/outfit@^5.2.8",
    "@tailwindcss/cli": "npm:@tailwindcss/cli@^4.1.18",
    "daisyui": "npm:daisyui@^5.5.14",
    "fuse.js": "npm:fuse.js@^7.1.0",
    "tailwindcss": "npm:tailwindcss@^4.1.18",
    "@tailwindcss/typography": "npm:@tailwindcss/typography@^0.5.19"
  }
}